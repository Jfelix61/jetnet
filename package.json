{
  "name": "jetnet",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "postinstall": "run-p install:api install:client",
    "install:api": "cd api && npm install",
    "install:client": "cd client && npm install",
    "start": "run-p start:api start:client",
    "start:api": "npm run start --prefix api",
    "start:client": "npm run start --prefix client",
    "build": "run-p build:api build:client",
    "build:api": "cd api && npm run build && cd ..",
    "build:client": "cd client && npm run build && cd ..",
    "prestart:docker": "npm run build",
    "start:docker": "docker-compose -f api/docker-compose.yml up -d --build",
    "stop:docker": "docker-compose -f api/docker-compose.yml down"
  },
  "devDependencies": {
    "npm-run-all": "^4.0.2",
    "opn-cli": "^3.1.0"
  }
}
